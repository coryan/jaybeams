#!/bin/sh
#
# Bootstrap autoconf and automake

echo clean up...
/bin/rm -fr aclocal.m4 autom4te.cache/ configure
/bin/rm -fr jb/jb-config.hpp.in Makefile.in
echo aclocal...
aclocal || exit 1
echo autoheader...
autoheader || exit 1
echo automake...
automake --add-missing --copy || exit 1
echo autoconf...
autoconf || exit 1
echo "Now run configure with any arguments necessary"
